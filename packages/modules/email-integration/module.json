{
  "name": "email",
  "version": "1.0.0",
  "description": "Email account integration and synchronization for Gmail, Outlook, and SMTP",
  "author": "LifeOS",
  "main": "src/module.ts",
  "permissions": [
    "database.read",
    "database.write",
    "events.publish",
    "events.subscribe",
    "jobs.create"
  ],
  "dependencies": {
    "core": "^1.0.0"
  },
  "events": {
    "subscribes": [],
    "publishes": [
      "EmailReceived",
      "EmailAccountConnected",
      "EmailAccountDisconnected"
    ]
  },
  "routes": {
    "baseUrl": "/api/email",
    "endpoints": [
      "POST /webhooks/outlook",
      "POST /webhooks/gmail",
      "POST /accounts/connect",
      "GET /accounts",
      "DELETE /accounts/:id"
    ]
  },
  "jobs": [
    {
      "name": "email-sync",
      "description": "Synchronize emails from connected accounts",
      "schedule": null,
      "priority": "normal"
    },
    {
      "name": "subscription-renewal",
      "description": "Renew webhook subscriptions for Outlook/Gmail",
      "schedule": "0 */6 * * *",
      "priority": "high"
    }
  ],
  "database": {
    "tables": [
      "EmailAccount",
      "Email"
    ],
    "migrations": "prisma/migrations"
  },
  "tags": [
    "email",
    "integration",
    "outlook",
    "gmail",
    "smtp"
  ]
}
