# LifeOS Environment Configuration
# Copy this file to .env and fill in your values

# Application
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL=postgresql://lifeos:lifeos_dev_password@localhost:5432/lifeos

# Redis (Job Queue & Caching)
REDIS_URL=redis://localhost:6379

# File Storage
FILE_STORAGE_PATH=./data

# Finance Module - AI Extraction
# Get free API key at: https://makersuite.google.com/app/apikey
# Free tier: 1,500 requests/day
GEMINI_API_KEY=

# Finance Module - Email Integration
# Get from: https://app.mailgun.com/app/sending/domains
MAILGUN_SIGNING_KEY=
MAILGUN_API_KEY=

# Logging
LOG_LEVEL=info

# Security
JWT_SECRET=your-secret-key-change-in-production
ENCRYPTION_KEY=your-encryption-key-32-chars-min

# CORS
CORS_ORIGIN=http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
